<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.tobbexiv.vorpruefungsleistung.main.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_wrapper"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/layout_innerWrapper">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/layout_display">

                <TextView
                    android:text="@string/hexcode"
                    android:id="@+id/text_hexcode"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="center_vertical"
                    android:layout_height="40dp"
                    android:layout_width="80dp"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:layout_width="120dp"
                    android:id="@+id/text_displayHexcode"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:gravity="center_vertical"
                    android:layout_height="40dp"
                    android:padding="5dp" />

                <Button
                    android:text="@string/deleteLast"
                    android:layout_width="40dp"
                    android:id="@+id/btn_deleteLast"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_height="40dp"
                    android:textAllCaps="false" />

                <Button
                    android:text="@string/delete"
                    android:layout_width="80dp"
                    android:id="@+id/btn_delete"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:layout_height="40dp"
                    android:textAllCaps="false" />

                <TextView
                    android:text="@string/bitcode"
                    android:id="@+id/text_bitcode"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="center_vertical"
                    android:layout_height="40dp"
                    android:layout_width="80dp"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/text_displayBitcode"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_height="40dp"
                    android:layout_width="240dp"
                    android:layout_columnSpan="3"
                    android:padding="5dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:text="@string/unicode"
                    android:id="@+id/text_unicode"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:gravity="center_vertical"
                    android:layout_height="40dp"
                    android:layout_width="80dp"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/text_displayUnicode"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_width="240dp"
                    android:layout_columnSpan="3"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center_vertical" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:columnOrderPreserved="false"
                android:id="@+id/layout_buttons"
                android:layout_alignParentStart="true">

                <Button
                    android:text="0"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_0"
                    android:layout_row="0"
                    android:layout_column="0" />

                <Button
                    android:text="1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_1"
                    android:layout_column="1"
                    android:layout_row="0" />

                <Button
                    android:text="2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_2"
                    android:layout_column="2"
                    android:layout_row="0" />

                <Button
                    android:text="3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_3"
                    android:layout_column="3"
                    android:layout_row="0" />

                <Button
                    android:text="4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_4"
                    android:layout_column="4"
                    android:layout_row="0" />

                <Button
                    android:text="5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_5"
                    android:layout_column="5"
                    android:layout_row="0" />

                <Button
                    android:text="6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_6"
                    android:layout_column="6"
                    android:layout_row="0" />

                <Button
                    android:text="7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_7"
                    android:layout_column="7"
                    android:layout_row="0" />

                <Button
                    android:text="8"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_8"
                    android:layout_column="0"
                    android:layout_row="1" />

                <Button
                    android:text="9"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_9"
                    android:layout_column="1"
                    android:layout_row="1" />

                <Button
                    android:text="A"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_a"
                    android:layout_column="2"
                    android:layout_row="1" />

                <Button
                    android:text="B"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_b"
                    android:layout_column="3"
                    android:layout_row="1" />

                <Button
                    android:text="C"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_c"
                    android:layout_column="4"
                    android:layout_row="1" />

                <Button
                    android:text="D"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_d"
                    android:layout_row="1"
                    android:layout_column="5" />

                <Button
                    android:text="E"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_e"
                    android:layout_row="1"
                    android:layout_column="6" />

                <Button
                    android:text="F"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_f"
                    android:layout_row="1"
                    android:layout_column="7" />

                <TextView
                    android:text="@string/pageValue"
                    android:id="@+id/text_page"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:layout_height="40dp"
                    android:layout_width="80dp"
                    android:paddingLeft="5dp" />

                <Button
                    android:text="@string/decrement"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_pageDecrement"
                    android:layout_row="2"
                    android:layout_column="2" />

                <Button
                    android:text="@string/increment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_pageIncrement"
                    android:layout_row="2"
                    android:layout_column="3" />

                <TextView
                    android:text="@string/codeValue"
                    android:id="@+id/text_code"
                    android:layout_columnSpan="2"
                    android:layout_column="4"
                    android:layout_row="2"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical" />

                <Button
                    android:text="@string/decrement"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_codeDecrement"
                    android:layout_row="2"
                    android:layout_column="6" />

                <Button
                    android:text="@string/increment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_codeIncrement"
                    android:layout_row="2"
                    android:layout_column="7" />

            </GridLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/scroll_options"
            android:fadeScrollbars="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/layout_options"
                android:scrollbars="vertical"
                android:isScrollContainer="true"
                android:scrollbarAlwaysDrawVerticalTrack="true">

                <TextView
                    android:text="@string/fontsize"
                    android:layout_height="40dp"
                    android:id="@+id/text_fontsize"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_width="120dp" />

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner_fontsize"
                    android:layout_row="0"
                    android:layout_column="1" />

                <TextView
                    android:text="@string/fonttype"
                    android:layout_height="40dp"
                    android:id="@+id/text_fonttype"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_width="120dp" />

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner_fonttype"
                    android:layout_row="1"
                    android:layout_column="1" />

                <TextView
                    android:text="@string/fontstyle"
                    android:layout_height="40dp"
                    android:id="@+id/text_fontstyle"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_width="120dp" />

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner_fontstyle"
                    android:layout_row="2"
                    android:layout_column="1" />

                <TextView
                    android:text="@string/fontcolor"
                    android:layout_height="40dp"
                    android:id="@+id/text_fontcolor"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_width="120dp" />

                <Spinner
                    android:layout_height="40dp"
                    android:id="@+id/spinner_fontcolor"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_width="200dp" />

                <TextView
                    android:text="@string/backgroundcolor"
                    android:layout_height="40dp"
                    android:id="@+id/text_backgroundcolor"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_width="120dp" />

                <Spinner
                    android:layout_height="40dp"
                    android:id="@+id/spinner_backgroundcolor"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_width="200dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
